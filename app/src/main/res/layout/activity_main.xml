<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/LinearLayout_Orientation"
        >

        <TextView
            android:id="@+id/txtTitle_Orientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orientation"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:background="?attr/colorControlHighlight"/>

        <TextView
            android:id="@+id/txtAzimuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azimuth: " />

        <TextView
            android:id="@+id/txtPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch: " />

        <TextView
            android:id="@+id/txtRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll: " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_MagneticField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout_Orientation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle_MagneticField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Magnetic Field"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtX_MagneticField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X: " />

        <TextView
            android:id="@+id/txtY_MagneticField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Y: " />

        <TextView
            android:id="@+id/txtZ_MagneticField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Z: " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Proximity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout_MagneticField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle_Proximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Proximity"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtProximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>